{
  "name": "kanbanboardapp-electron",
  "private": false,
  "version": "0.0.0",
  "description": "Une application Kanban board construite avec Electron, React et Tailwind CSS",
  "author":"Abid Fatima",
  "main": "electron/electron.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "server": "vite preview",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "tsc --noEmit && cross-env ELECTRON=true vite build",
    "app:build": "npm run build:for:electron && npm run electron:builder"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^3.0.1",
    "tailwind-merge": "^2.2.1",
    "wait-on": "^7.0.1"
  },
  "devDependencies": {
    "@swc/core": "^1.4.2",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react": "^3.0.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "autoprefixer": "^10.4.17",
    "electron": "^22.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^4.9.3",
    "vite": "^4.0.0"
  },
  "build": {
    "appId": "com.devname.package",
    "productName": "MyKanbanBoard",
    "copyright": "Copyright Â© 2024 Abid Fatima",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "electron.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    },
    "win": {
      "target": "nsis",
      "icon": "./src/Icons/logo.ico"
    }
  }
}
